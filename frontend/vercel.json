{
  "version": 2,
  "public": true,
  "framework": "create-react-app",
  "outputDirectory": "build",
  "buildCommand": "chmod +x ./node_modules/.bin/react-scripts && npm run build",
  "installCommand": "npm install",
  "routes": [
    { "handle": "filesystem" },
    { "src": "/.*", "dest": "/index.html" }
  ],
  "env": {
    "REACT_APP_API_URL": "https://careescapes-api.onrender.com"
  }
} 